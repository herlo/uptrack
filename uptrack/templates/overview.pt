<html lang="en" xmlns:tal="http://xml.zope.org/namespaces/tal"
                xmlns:metal="http://xml.zope.org/namespaces/metal"
                metal:use-macro="layout.macros['layout']">

  <tal:block metal:fill-slot="content">
    <div tal:repeat="i_distro filter(lambda x: x[0]%2==0, enumerate(distros))" class="row-fluid">
      <tal:block tal:omit-tag="" tal:define="index i_distro[0]; distro i_distro[1]">
      <div class="span5 offset1">
        <h4>Overview of ${distro["name"]} packages</h4>
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>&nbsp;</th>
              <th>Up to date</th>
              <th>Out of date</th>
            </tr>
          </thead>
          <tbody>
            <tr tal:repeat="base distro['bases']">
              <td>${base["name"]}</td>
              <td><a href="/distros/${distro['id']}/uptodate?upstream=${base['id']}">${base["uptodate"]}</a></td>
              <td><a href="/distros/${distro['id']}/outofdate?upstream=${base['id']}">${base["outofdate"]}</a></td>
            </tr>
          </tbody>
        </table>
        <p>Packages with problems: ${distro["problems"]}</p>
        <p>Total number of packages: ${distro["total"]}</p>
      </div>
      <div tal:condition="len(distros) > index+1" class="span5">
        <h4>Overview of ${distros[index+1]["name"]} packages</h4>
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>&nbsp;</th>
              <th>Up to date</th>
              <th>Out of date</th>
            </tr>
          </thead>
          <tbody>
            <tr tal:repeat="base distros[index+1]['bases']">
              <td>${base["name"]}</td>
              <td><a href="/distros/${distros[index+1]['id']}/uptodate?upstream=${base['id']}">${base["uptodate"]}</a></td>
              <td><a href="/distros/${distros[index+1]['id']}/outofdate?upstream=${base['id']}">${base["outofdate"]}</a></td>
            </tr>
          </tbody>
        </table>
        <p>Packages with problems: ${distros[index+1]["problems"]}</p>
        <p>Total number of packages: ${distros[index+1]["total"]}</p>
      </div>
      </tal:block>
    </div>
  </tal:block>
</html>
