<html lang="en" xmlns:tal="http://xml.zope.org/namespaces/tal"
                xmlns:metal="http://xml.zope.org/namespaces/metal"
                metal:use-macro="layout.macros['layout']">

  <tal:block metal:fill-slot="content">
    <div tal:repeat="i_release filter(lambda x: x[0]%2==0, enumerate(releases))" class="row-fluid">
      <tal:block tal:omit-tag="" tal:define="index i_release[0]; release i_release[1]">
      <div class="span5 offset1">
        <h4>Overview of ${release["name"]} packages</h4>
        <p>Packages with problems: ${release["problems"]}</p>
        <p>Total number of packages: ${release["total"]}</p>
      </div>
      <div tal:condition="len(releases) > index+1" class="span5">
        <h4>Overview of ${releases[index+1]["name"]} packages</h4>
        <p>Packages with problems: ${releases[index+1]["problems"]}</p>
        <p>Total number of packages: ${releases[index+1]["total"]}</p>
      </div>
      </tal:block>
    </div>
  </tal:block>
</html>
